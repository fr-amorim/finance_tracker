// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AssetPrice {
  id        Int      @id @default(autoincrement())
  ticker    String
  date      DateTime
  open      Float
  high      Float
  low       Float
  close     Float
  volume    BigInt
  adjClose  Float?
  currency  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([ticker, date])
  @@index([ticker])
  @@index([date])
}

model ExchangeRate {
  id        Int      @id @default(autoincrement())
  pair      String
  date      DateTime
  rate      Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([pair, date])
  @@index([pair])
}

model SyncRegistry {
  key        String   @id // ticker or currency pair
  lastCheck  DateTime @updatedAt
}
